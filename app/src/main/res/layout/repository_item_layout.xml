<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/repository_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp">

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:transitionName="@string/animation_name"
            app:fabSize="normal"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:orientation="vertical">

        <com.boxme.githubsample.githhubsample.CustomComponents.CustomTextView
                android:id="@+id/txt_repo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:font="OpenSans-Regular.ttf"/>

        <com.boxme.githubsample.githhubsample.CustomComponents.CustomTextView
                android:id="@+id/txt_repo_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:lines="3"
                android:ellipsize="end"
                app:font="OpenSans-Regular.ttf"/>

    </LinearLayout>


</LinearLayout>
